double func1(int x, int n)
{
    double s, y = 0;
    if (x <= 0)
    {
        for(int i = 2; i <= (n - 1); i++)
        {
            y += (x - 1) / i;
        }
    }
    else
    {
        for (int i = 0; i <= (n - 1); i++)
        {
            s = 0;
            for (int j = 0; j <= n; j++)
            {
                s = s + ((i + 1) / (j + x));
            }
            y *= s;
        }
    }
    return y;
}

