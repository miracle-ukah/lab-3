#include <iostream>
#include <math.h>
using namespace std;

int main()
{
    int x,n;
 double y = 0;
 cout <<"input n>1, n=";
 cin >> n;
 cout << "input x =";
 cin >> x;
 if (x <= 0)
 {
     for(int i = 2; i<=(n-1); i++)
     {
         y += (x / i);
     }
}
else
{
    for (int i=0; i <= (n - 1); i++)
    {
        int s = 1;
        for (int j = 0; j <= i; j++)
        {
            s += s + (i / (j + x));
        }
    y += y + s;
    
    
    }
}
cout <<"x =" << x <<";" <<"y =" << y << endl;
system("pause");
return 0;
}
