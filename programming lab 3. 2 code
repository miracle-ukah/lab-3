#include <iostream>

using namespace std;

int product( int x, int n)
{
    if (n < 1)
    {
        return 1;
    }
    else
    {
        return (x + n) * product(x, n -1);
    }
}

int main()
{
    int x, n;
    cout << "input X:" << endl;
    cin >> x;
    cout << "input n:" << endl;
    cin >> n;
    cout << product(x, n);
    
    return 0;
}
